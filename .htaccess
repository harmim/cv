Require all granted

# disable directory listing
<IfModule mod_autoindex.c>
	Options -Indexes
</IfModule>

DirectoryIndex index.html

<IfModule mod_rewrite.c>
	RewriteEngine On

	# block access to dotfiles (except .well-known)
	RewriteCond %{REQUEST_URI} !^/\.well-known/
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule (^|/)\. - [F,L]

	# .well-known/...
	RewriteCond %{REQUEST_FILENAME} -f [OR]
	RewriteCond %{REQUEST_FILENAME} -d
	RewriteRule ^(\.well-known/.*)$ $1 [L]

	# use HTTPS
	RewriteCond %{HTTPS} off
	RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,QSA,L]

	# canonical domain (bare -> www)
	RewriteCond %{HTTP_HOST} ^harmim\.cz$ [NC]
	RewriteRule ^(.*)$ https://www.harmim.cz/$1 [R=301,QSA,L]

	# remove slash from the end of URL
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)/$ /$1 [R=301,QSA,L]
</IfModule>

# enable gzip compression
<IfModule mod_deflate.c>
	<IfModule mod_filter.c>
		AddOutputFilterByType DEFLATE text/html text/css application/javascript image/svg+xml
	</IfModule>
</IfModule>
